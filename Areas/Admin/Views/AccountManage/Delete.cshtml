@model Webtt.Models.User
@{ ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<div class="container">
    <h1 class="add">Delete User</h1>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-25">
                <label asp-for="FullName" class="label-form"></label>
            </div>
            <div class="col-75">
                @Html.DisplayFor(model => model.FullName)
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Email" class="label-form"></label>
            </div>
            <div class="col-75">
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>
        <div class="row">
            <input class="submit-form" type="submit" value="Delete">
        </div>
    </form>
    <div class="back">
        <a class="button-delete" asp-action="Index">Back</a>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}