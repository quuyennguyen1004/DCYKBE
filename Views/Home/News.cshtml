@model IEnumerable<Webtt.Models.News>

@{
    ViewData["Title"] = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tin tuc moi</h1>
<hr />
<div class="w-clear">
    <div class="slick_5 slick-initialized slick-slider">
        <div aria-live="polite" class="slick-list draggable">
            <div class="slick-track" role="listbox" style="opacity: 1; display: flex; width: 4444px; transform: transform3d(-2020px, 0px, 0px) ; ">
                @foreach (var item in Model)
                {
                    <div class="w-clear slick-slide slick-cloned" tabindex="-1" role="option" aria-describedby="slick-slide67"
                         style="width: 202px;" data-slick-index="-5" aria-hidden="true">

                        <div class="box-sp w-clear">
                            <a asp-action="Index" asp-controller="NewsDetail" asp-route-id="@item.NewsId" asp-route-name="@item.NewsTitle" tabindex="-1">
                                <div class="images">
                                    <img src="~/img/@item.NewsImage" alt="" width="250" height="220">
                                </div>
                                <div class="new">
                                </div>
                            </a>
                            <div class="info w-clear">
                                <div class="w-clear">
                                    <a asp-action="Index" asp-controller="NewsDetail" asp-route-id="@item.NewsId" asp-route-name="@item.NewsTitle" tabindex="-1">
                                        <h3>
                                            @item.NewsTitle
                                        </h3>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
